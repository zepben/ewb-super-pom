<?xml version="1.0" encoding="UTF-8"?>
<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd"
          xmlns="http://maven.apache.org/SETTINGS/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <localRepository>/maven</localRepository>
    <servers>
        <server>
            <id>zepben-maven</id>
            <username>${server.username}</username>
            <password>${server.password}</password>
            <configuration>
                <httpHeaders>
                  <property>
                    <name>nexus-signature</name>
                    <value>${nexus.signature}</value>
                  </property>
                </httpHeaders>
            </configuration>
        </server>
        <server>
            <id>ossrh</id>
            <username>${ossrh.server.username}</username>
            <password>${ossrh.server.password}</password>
        </server>
        <server>
            <id>${gpg.key}</id>
            <passphrase>${gpg.password}</passphrase>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>ossrh</id>
            <properties>
                <gpg.keyname>${gpg.key}</gpg.keyname>
                <gpg.executable>gpg</gpg.executable>
            </properties>
        </profile>
        <profile>
            <id>zepben-maven</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <repos.url>${server.repo.url}</repos.url>
                <releases.url>${server.release.url}</releases.url>
                <snapshots.url>${server.snapshot.url}</snapshots.url>
            </properties>
            <repositories>
                <repository>
                    <id>zepben-maven</id>
                    <url>${server.repo.url}</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>zepben-maven</id>
                    <url>${server.repo.url}</url>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </pluginRepository>
            </pluginRepositories>
        </profile>
        <profile>
            <id>local-maven</id>
            <repositories>
                <repository>
                    <id>local-maven</id>
                    <url>file:///root/local_repo</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>local-maven</id>
                    <url>file:///root/local_repo</url>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </pluginRepository>
            </pluginRepositories>
        </profile>
        <profile>
            <id>allow-snapshots</id>
            <repositories>
                <repository>
                    <id>snapshots-repo</id>
                    <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>local-maven</activeProfile>
        <activeProfile>zepben-maven</activeProfile>
        <activeProfile>ossrh</activeProfile>
        <activeProfile>allow-snapshots</activeProfile>
    </activeProfiles>
</settings>
